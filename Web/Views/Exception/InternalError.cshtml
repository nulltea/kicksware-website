@using Web.Utils.Bundle
@model Exception

@{
	ViewBag.Title = "Internal error: 500";
	Layout = "_EmptyLayout";
}

@section Styles
{
	<link rel="stylesheet" href="@Bundle.GetAssetName("exception", "css")" asp-append-version="true"/>
}

<div class="exception" id="internal-error">
	<aside>
		<a href="https://mvsm.com/project/air-max-day-18" target="_blank">
			<img src="/storage/assets/exception/500.png" alt/>
		</a>
	</aside>
	<main>
		<h1 class="error-code">500</h1>
		<div class="error-content">
			<p>
				Something go wrong on that side of the Internet
			</p>
		</div>
		@if (Model != null)
		{
			<button class="button expandable">
				<span>Show details</span>
			</button>
		}
		<div class="controls">
			<button class="button" id="try-again">
				<span>Try again</span>
			</button>
			<button class="button">
				<a href="@ViewBag.FromUrl">Go back</a>
			</button>
		</div>
		@{ await Html.RenderPartialAsync("_ExceptionDetailsPartial", Model); }
	</main>
</div>

@section Scripts
{
	<script src="@Bundle.GetAssetName("exception", "js")" asp-append-version="true"></script>
}